@page "/Students/Create"
@using BlazorApp2.Models
@inject BlazorApp2Context _context
@using Microsoft.EntityFrameworkCore
@inject NavigationManager NavigationManager

<h1 class="t">Внести Студента</h1>
<br />
<EditForm Model="newStudent" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="surname" class="control-label">Фамилия</label>
                <InputText id="surname" @bind-Value="newStudent.Фамилия" />
            </div>
            <div class="form-group">
                <label for="name" class="control-label">Имя</label>
                <InputText id="name" @bind-Value="newStudent.Имя" />
            </div>
            <div class="form-group">
                <label for="patronymic" class="control-label">Отчество</label>
                <InputText id="patronymic" @bind-Value="newStudent.Отчество" />
            </div>
            <div class="form-group">
                <label for="height" class="control-label">Рост</label>
                <InputNumber id="height" @bind-Value="newStudent.Рост" />
            </div>
            <div class="form-group">
                <label for="birthday" class="control-label">День Рождения</label>
                <InputDate id="birthday" @bind-Value="newStudent.День_Рождения" />
            </div>
            <div class="form-group">
                <label for="group" class="control-label">Группа</label>
                <InputText id="group" @bind-Value="newStudent.Группа" />
            </div>
            <div class="form-group">
                <label for="specialty" class="control-label">Специальность</label>
                <InputText id="specialty" @bind-Value="newStudent.Специальность" />
            </div>
            <div class="form-group">
                <label for="scholarship" class="control-label">Стипендия</label>
                <InputText id="scholarship" @bind-Value="newStudent.Стипендия" />
            </div>
            <div class="form-group">
                <label for="age" class="control-label">Возраст</label>
                <InputNumber id="age" @bind-Value="newStudent.Возраст" />
            </div>
            <div class="form-group">
                <br />
                <button type="submit">Добавить студента</button>
            </div>
            <br />
            <div class="form-group">
                <NavLink class="nav-link" href="/Students/Index">
                    <span class="oi oi-minus" aria-hidden="true"></span> Вернуться к Просмотру
                </NavLink>
            </div>
        </div>
    </div>
</EditForm>
@code {
    private Student newStudent = new Student();

    private async Task HandleValidSubmit()
    {
        _context.EnsureData();
        _context.Student.Add(newStudent);
        await _context.SaveChangesAsync();

        NavigationManager.NavigateTo("/Students/Index");
    }
}